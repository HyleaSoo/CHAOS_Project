{
    /*
    插件列表:
        Bookmarks.
        Bracket Pair Colorizer 2.
        ESLint.
        GitHub Plus Theme.
        GitHub Sharp Theme.
        JavaScript(ES6) code snippets.
        Night Owl - Theme
        Verdandi Theme
        Winter is Coming Theme
        C#
        SQLite
    */

    // 书签自定义图标路径
    "bookmarks.gutterIconPath": "icon/ds.jpg",

    // 活动范围设置
    "bracket-pair-colorizer-2.activeScopeCSS": [
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}",
        "opacity: 0.5"
    ],
    // 色彩模式 - 连贯显示
    "bracket-pair-colorizer-2.colorMode": "Consecutive",
    // 括号匹配颜色
    "bracket-pair-colorizer-2.colors": [
        "#e5cc80", //artifact (gold)
        "#1eff00", //uncommon (green)
        "#0081ff", //rare (blue)
        "#c600ff", //epic (purple)
        "#ff8000", //legendary (orange)
        "#E4007F", //品红
        "Aqua", //青
        "Pink", //粉
        "#CC9909", //暗金
        "DarkCyan",//灰蓝
        "#19CAAD", //淡绿
        "#D1BA74", //灰黄
        "#F4606C", //淡玫红
        "#8CC7B5", //灰绿
    ],
    // 强制迭代颜色
    "bracket-pair-colorizer-2.forceIterationColorCycle": false,
    // 强制唯一颜色
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
    // 高亮活动范围
    "bracket-pair-colorizer-2.highlightActiveScope": false,
    // 范围线样式
    "bracket-pair-colorizer-2.scopeLineCSS": [
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}",
        "opacity: 0.5"
    ],
    // 装订线内显示括号
    "bracket-pair-colorizer-2.showBracketsInGutter": true,

    // Crane: 可能是错误检查?
    "crane.enableErrorTelemetry": true,

    // 显示空格
    "editor.renderWhitespace": "all",
    // 显示制表符
    "editor.renderControlCharacters": true,
    // 关闭检测第一个tab后面全是tab
    "editor.detectIndentation": false,
    // tab为4个空格
    "editor.tabSize": 4,
    // 转为空格
    "editor.insertSpaces": true,
    // 启用minimap
    "editor.minimap.enabled": true,
    // 控制光标动画样式，可能的值为 "blink"、"smooth"、"phase"、"expand" 和 "solid"
    "editor.cursorBlinking": "expand",
    // 光滑输入
    "editor.cursorSmoothCaretAnimation": true,
    // 在一定数量的等宽字符后显示垂直标尺。输入多个值，显示多个标尺。若数组为空，则不绘制标尺。
    "editor.rulers": [80],
    // 控制字体系列
    "editor.fontFamily": "'Fira Code Retina', Consolas, monospace",
    // 启用字体连字
    "editor.fontLigatures": true,
    // 以像素为单位控制字号
    "editor.fontSize": 15,
    // 控制字体粗细
    "editor.fontWeight": "normal",
    // 代码超出屏幕换行
    "editor.wordWrap": "off",

    // 与活动文件同步
    "explorer.autoReveal": false,
    // 删除前询问
    "explorer.confirmDelete": false,

    // 忽视git失效警告
    "git.ignoreMissingGitWarning": true,

    // SQL Server 连接配置
    "mssql.connections": [
        {
            "server": "localhost",
            "database": "Record",
            "authenticationType": "SqlLogin",
            "user": "sa",
            "password": "root",
            "emptyPasswordInput": false,
            "savePassword": true
        }
    ],

    //// 指定PHP可执行文件
    //"php.validate.executablePath": "/php/php-7.2.1-nts/php.exe",
    //// PHP IntelliSense php7.0指定路径(必须7.0以上)
    //"php.executablePath": "/php/php-7.2.1-nts/php.exe",

    // 菜单条显示方式 动态(可用alt调出)
    "window.menuBarVisibility": "toggle",
    // 动作条可见
    "workbench.activityBar.visible": true,
    // 主题
    "workbench.colorTheme": "GitHub Sharp",
}