    /* - GO环境配置 - */
    // tools自动更新
    "go.toolsManagement.autoUpdate": true,
    // 右键菜单选项可见性
    "go.editorContextMenuCommands": {
        "toggleTestFile": false,
        "removeTags": true,
        "fillStruct": true,
        "testAtCursor": false,
        "generateTestForFunction": false,
        "testCoverage": false,
        "playground": false,
        "debugTestAtCursor": false
    },
    // 嵌入显示
    "go.inlayHints.constantValues": true, //常量值
    "go.inlayHints.assignVariableTypes": true, //变量类型
