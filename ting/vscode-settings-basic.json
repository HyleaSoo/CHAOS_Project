        "**/vendor/**/{Tests,tests}/**",
        "**/vendor/**/vendor/**",
        "**/v20/**/runtime/**",
        "**/log/**",
        "**/laya/**",
        "**/zt/**",
        "**/vagrant/**",
        "**/o2o/cms/Lib/ORG/mpdf/**",
        "**/frontend/**",
        "**/o2o_platform/**",
        "**/CHAOS_Project/**",
    ],
    // 书签 保存到项目中，防止误操作移除项目后书签丢失的情况
    "bookmarks.saveBookmarksInProject": true,
    // 书签 边框、填充色
    "bookmarks.gutterIconBorderColor": "#38b0de",
    "bookmarks.gutterIconFillColor": "#f4f3f3b1",
    // 背景图片
    "background.loop": true,
    "background.useDefault": false,
