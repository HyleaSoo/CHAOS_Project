    /** 编辑器设置 */
    // 显示空格
    "editor.renderWhitespace": "all",
    // 显示制表符
    "editor.renderControlCharacters": true,
    // 转为空格
    "editor.insertSpaces": true,
    // 关闭检测第一个tab后面全是tab
    "editor.detectIndentation": false,
    // tab为4个空格
    "editor.tabSize": 4,
    // 当前行突出显示
    "editor.renderLineHighlight":"all",
    // 启用minimap
    "editor.minimap.enabled": true,
    // minimap自动隐藏
    "editor.minimap.autohide": false,
    // 控制迷你地图的大小。
    //  - proportional: 迷你地图的大小与编辑器内容相同(并且可能滚动)。
    //  - fill: 迷你地图将根据需要拉伸或缩小以填充编辑器的高度(不滚动)。
    //  - fit: 迷你地图将根据需要缩小，永远不会大于编辑器(不滚动)。
    "editor.minimap.size": "proportional",
    // 控制光标动画样式，可能的值为 "blink"、"smooth"、"phase"、"expand" 和 "solid"
    "editor.cursorBlinking": "expand",
    // 光滑输入
    "editor.cursorSmoothCaretAnimation": true,
    // 在一定数量的等宽字符后显示垂直标尺。输入多个值，显示多个标尺。若数组为空，则不绘制标尺。
    "editor.rulers": [72,100,120],
    // 编辑器字体系列
    "editor.fontFamily": "'Fira Code Retina', 'HarmonyOS Sans SC', monospace",
    // 控制台字体系列
    "terminal.integrated.fontFamily": "'Maple Mono SC NF', 'HarmonyOS Sans SC', monospace",
    // 启用字体连字
    "editor.fontLigatures": true,
    // 以像素为单位控制字号
    "editor.fontSize": 14.5,
    // 控制字体粗细
    "editor.fontWeight": "normal",
    // 代码超出屏幕换行
    "editor.wordWrap": "off",
    // 编辑器是否动画滚动
    "editor.smoothScrolling": false,
    // 自动关闭括号
    "editor.autoClosingBrackets": "always",
    // 首行粘滞滚动
    "editor.stickyScroll.enabled": true,
    // 粘滞滚动最大行数
    "editor.stickyScroll.maxLineCount": 5,
    // Tab键自动填入最佳推荐值
    "editor.tabCompletion": "on",
    // 缩进参考线
    "editor.guides.indentation": true,
    // 折叠策略
    "editor.foldingStrategy": "auto",
    // 控制何时显示行号槽上的折叠控件。
    //  - always: 始终显示折叠控件。
    //  - mouseover: 仅在鼠标位于装订线上方时显示折叠控件。
    //  - never: 隐藏
    "editor.showFoldingControls": "always",
    // 启用括号着色器
    "editor.bracketPairColorization.enabled": true,
    // 不同括号类型是否有独立的颜色池
    "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
    // 括号对连接
    "editor.guides.bracketPairs": "active",
    //编辑器代码颜色
    "editor.tokenColorCustomizations": {
        "types": "#1a05d4",
        //"comments": "#474343cf", // 注释
        "keywords": "#cc3299", // 关键字
        //"functions": "#5b99fcc9", // 函数名
        "variables": "#05658b", // 变量名
        //"strings": "#04771f", // 字符串
        "numbers": "#06aaaf", // 数字
        "textMateRules": [
            {   //数据类型
                "scope": "storage.type123",
                "settings": {"foreground": "#238e68",}
            },
            {   //类的名称
                "scope": "entity.name.type", //函数和类的名称颜色
                "settings": {"foreground": "#238e68",}
            },
            {   //运算符号
                "scope": "keyword.operator",
                "settings": {"foreground": "#bc1717",}
            },
            {   //逻辑符号
                "scope": "keyword.operator.logical",
                "settings": {"foreground": "#cc3299"}
            },
            {   //逗号分隔符,分号
                "scope": ["punctuation.separator", "punctuation.terminator"],
                "settings": {"foreground": "#23238e",}
            },
            {   //换行符、转义符等
                "scope": "constant.character.escape",
                "settings": {"foreground": "#d98719",}
            },
        ]
    },
    // 全局搞颜色 - dwbRGB
    "workbench.colorCustomizations": {
        // 括号对
        "editorBracketMatch.border": "#FFD700",
        "editorBracketMatch.background": "#c0c0c055",
        "editorBracketHighlight.foreground1": "#1eff00",
        "editorBracketHighlight.foreground2": "#0081ff",
        "editorBracketHighlight.foreground3": "#c600ff",
        "editorBracketHighlight.foreground4": "#ff8000",
        "editorBracketHighlight.foreground5": "#43ebbb",
        "editorBracketHighlight.foreground6": "#ff6ec7",
        "editorBracketHighlight.unexpectedBracket.foreground": "#BA2636",
        // 标尺
        "editorRuler.foreground": "#fb03a421",
        // 鼠标
        "editorCursor.foreground": "#ff1cae",
        // 行号 - 当前行
        "editorLineNumber.activeForeground": "#ff6ec7",
        // 当前行高亮
        "editor.lineHighlightBorder": "#cecccc90",
        "editor.lineHighlightBackground": "#f4f3f3b1",
        // 空格
        "editorWhitespace.foreground": "#09000025",
        // 书签
        "bookmarks.lineBackground": "#005eff04",//行背景
        "bookmarks.lineBorder": "#adeaeaa0",//行边框
        "bookmarks.overviewRuler": "#82d4f5",//滚动条中条块色
    },
    // 控制编辑器打开的位置
    //  - `left` 或 `right` 可分别在当前活动编辑器的左侧或右侧打开
    //  - `first` (最前) 或 `last` (最后) 打开的位置与当前活动编辑器无关
    "workbench.editor.openPositioning": "last",
    // 控制编辑器选项卡的大小调整。当 "#workbench.editor.showTabs#" 处于禁用状态时，将忽略此值。
    //  - fit: 始终将标签页保持足够大，能够完全显示编辑器标签。
    //  - shrink: 在不能同时显示所有选项卡时，允许选项卡缩小。
    "workbench.editor.tabSizing": "shrink",
    // 项目文件树缩进像素
    "workbench.tree.indent": 10,
    // 主题
    "workbench.colorTheme": "GitHub Sharp",
    // 标题栏显示命令中心
    "window.commandCenter": true,
    // 菜单可见性
    "window.menuBarVisibility": "classic",
    // 与活动文件同步
    "explorer.autoReveal": false,
    // 删除前询问
    "explorer.confirmDelete": true,
    // 文件自动保存
    //  - off: 关闭自动保存
    //  - afterDelay: 在配置的 `files.autoSaveDelay` 之后
    //  - onFocusChange: 编辑器失去焦点
    //  - onWindowChange: 软件窗口失去焦点
    "files.autoSave": "onWindowChange",
    // 项目列表排除某文件、文件夹
    "files.exclude": {
        "**/.idea": true,
    },
    // 配置语言的文件关联。 这些关联的优先级高于已安装语言的默认关联。
    "files.associations": {"*.module": "php"},
    /* php环境配置 */
    "php.validate.executablePath": "D:/Programs/phpstudy_pro/Extensions/php/php7.1.9nts/php.exe",
    "php.executablePath": "D:/Programs/phpstudy_pro/Extensions/php/php7.1.9nts/php.exe",
    "php.suggest.basic": false,
    // php主页
    "intelephense.environment.documentRoot": "index.php",
    // php检查版本
    "intelephense.environment.phpVersion": "7.1.9",
    // intelephense排除文件夹（资源文件加太大了造成一直在检索php文件导致提示跳转根本用不了）
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
